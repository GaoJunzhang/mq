/**index.wxss**/
.position{
  width: 100%;
  min-height: 100%;
  display: block;
  background: #ffffff;
  z-index: 99999;
  position:fixed;
  top:0;
  left:0;
}
.comment {
  width: 94%;
  padding: 0 3%;
}

.borderBottom {
  width: 100%;
  border-bottom: 1rpx solid #f5f5f5;
}

.borderBottom textarea {
  width: 100%;
  font-size: 30rpx;
}

.comment_btn {
  color: #64acfe;
  padding: 30rpx 0 20rpx;
}

.comment_btn .add_comment {
  width: 110rpx;
  height: 110rpx;
  text-align: center;
  line-height: 110rpx;
  margin-right: 20rpx;
  background: #f9f9f9;
  border-radius: 5rpx;
  border: 1rpx solid #f5f5f5;
}

.comment_btn .add_comment text {
  font-size: 40rpx;
}

.comment_url {
  width: 94%;
  padding: 0 3%;
  background: #fff;
  margin-top: 30rpx;
}

.comment_url .add_comment {
  padding: 30rpx 0;
  display: block;
  position: relative;
}

.comment_url .add_comment text {
  margin-right: 30rpx;
  font-size: 40rpx;
}

.comment_url .add_comment text.icon-youjiantou {
  position: absolute;
  right: 0;
  top: 20rpx;
  font-size: 55rpx;
  margin-right: 0;
}

.comment_url .add_comment input {
  width: 90%;
  overflow: hidden;
  text-align: right;
  text-overflow: ellipsis;
  white-space: nowrap;
}

checkbox {
  margin-right: 30rpx;
}

/*  重写 checkbox 样式  */

checkbox .wx-checkbox-input {
  border-radius: 50%;
  width: 40rpx;
  height: 40rpx;
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  border: 1rpx solid #63a9fe;
  background: #63a9fe;
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  border-radius: 50%;
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  font-size: 30rpx;
  color: #fff;
  background: transparent;
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);
}

.images_list {
  width: 100%;
  background: #fff;
}

.images_list .addImages {
  height: 210rpx;
  overflow: hidden;
  margin-top: 10rpx;
}

.images_list .addImages image {
  width: 96%;
  margin-left: 2%;
  margin-right: 2%;
  background: #f2f2f2;
}

.images_list .addImageBtn {
  height: 210rpx;
  line-height: 210rpx;
  text-align: center;
  margin-top: 10rpx;
}
.images_list .addImageBtn text{
  display: block;
  width: 96%;
  margin-left: 2%;
  margin-right: 2%;
  background: #f2f2f2;
  color: #64a6ff;
  font-size: 60rpx;
}

.voices_list{
  padding-top: 10rpx;
}
.voices_list .cell-bd {
  width: 100rpx;
  height: 100rpx;
  line-height: 100rpx;
  margin-top: 10rpx;
  margin-left: 5%;
  text-align: center;
  background: #f5f5f5;
  border-radius: 5rpx;
}
.voices_list .cell-bd text{
  color: #64a6ff;
  font-size: 60rpx;
}
.timeCount{
  margin-left: 30rpx;
  padding-top: 20rpx;
  text-align: center;
  line-height: 40rpx;
  color: #CCCCCC;
}
.voices_list .delPlay{
  color: #64a6ff;
  line-height: 100rpx;
  margin-right: 10%;
}

.time{
  padding: 40rpx 0;
  line-height: 40rpx;
  font-size: 30rpx;
  color:#999;
}
.time .touchup{
  width:80rpx;
  height: 80rpx;
  border: 1rpx solid #f2f2f2;
  position: relative;
  border-radius: 50%;
  margin-right: 20rpx;
}
.time .touchup::before{
  content: '';
  display: block;
  width:60rpx;
  height: 60rpx;
  position: absolute;
  top: 11rpx;
  left:11rpx;
  background: #f00;
  border-radius: 50%;
}

.choose_userList{
  width: 100%;
  display: block;
}
.choose_userList .choose_userInfo{
  line-height: 90rpx;
}
.choose_userList .choose_userInfo label{
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  display: block;
  padding: 20rpx 0;
}
.choose_userList .choose_userInfo label.checked{
  background: #f2f2f2;
}
.choose_userList .choose_userInfo label checkbox{
  margin-left: 5%;
}
.choose_userList .choose_userInfo image{
  width:80rpx;
  height: 80rpx;
  border-radius: 55%;
  vertical-align: bottom;
  margin-right: 20rpx;
  border: 5rpx solid #ffffff;
}
