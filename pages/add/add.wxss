.section input {
  color: #565656;
  font-size: 30rpx;
}

radio-group {
  padding: 10rpx 0;
}

.section2 {
  width: 94%;
  padding: 30rpx 3% 0;
  background: #fff;
  margin-top: 30rpx;
}
.section2 label {
  padding: 30rpx 0;
  font-size: 30rpx;
  display: block;
  color: #565656;
}

.section2 label:first-child {
  border-bottom: 1px solid #f5f5f5;
}
.choose_date{
  padding-bottom: 30rpx;
}
.section2 .section__title {
  font-size: 40rpx;
  color: #000;
}

picker {
  padding-bottom: 10rpx;
}

.picker {
  text-align: right;
  font-size: 30rpx;
}

.picker .dateTitle {
  height: 40rpx;
  padding: 15rpx 0;
  text-align: right;
  width: 30%;
}

.picker .datePicker {
  display: block;
  width: 55%;
  margin-left: 2%;
  margin-right: 5%;
  height: 40rpx;
  padding: 15rpx 2%;
  border: 1rpx solid #ededed;
  text-align: left;
  color: #cbcbcb;
  position: relative;
}

.picker .datePicker text.iconfont {
  position: absolute;
  top: 15rpx;
  right: 10rpx;
  font-size: 40rpx;
}
