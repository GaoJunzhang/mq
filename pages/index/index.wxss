/**index.wxss**/
.circle,.add_circle{
  width:94%;
  margin-left:3%; 
  margin-top: 20rpx; 
}
.circle .circle_url{
  padding: 20rpx;
  display: block;
  background-color: #ffffff;
  border-radius: 10rpx;
  position: relative;
}
.circle .circle_url .circle_title{
  width: 65%;
  overflow:hidden; 
  float: left;
  text-overflow:ellipsis;
  white-space:nowrap; 
  font-size: 80rpx;
  padding: 40rpx 0;
  line-height: 80rpx;
  display: block;
}
.circle .circle_url .circle_user{
  padding-top: 40rpx;
  width:35%;
  float: right;
  justify-content:flex-end;
  flex-direction: row-reverse;
}
.circle .circle_url .circle_user image:first-child{
  margin-right: 2%;
}
.circle .circle_url .circle_user image{
  width: 80rpx;
  height: 80rpx;
  margin-right: -30rpx;
  border-radius: 45rpx;
  float: right;
  border: 6rpx solid #ffffff;
}
.circle .circle_url .circle_des{
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  font-size: 32rpx;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2;
}
.circle .circle_url .icon-closed{
  position:absolute;  
  right: 10rpx;
  top: 10rpx;
  font-size: 35rpx;
}
.circle .circle_url .circle_foot{
  padding-top: 60rpx;
  flex-wrap: nowrap;
}
.circle .circle_url .circle_foot .circle_total{
  max-width: 70%; 
  float: left;    
  overflow:hidden; 
  text-overflow:ellipsis;
  white-space:nowrap; 
}
.circle .circle_url .circle_foot .circle_like{
  float: right;
  padding: 5rpx 20rpx;  
}
.circle .circle_url .circle_foot .circle_like .icon-xin1{
  margin-right: 10rpx;
}
.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-dialog {
  width: 80%;
  overflow: hidden;
  position: fixed;
  top: 30%;
  left: 10%;
  z-index: 9999;
  padding: 30rpx 0;
  background: #f9f9f9;
}

.modal-title {
  padding: 60rpx 0;
  font-size: 36rpx;
  color: #000000;
  text-align: center;
}
.modal-footer {
  display: flex;
  flex-direction: row;
  height: 86rpx;
  padding: 10rpx 0;
  font-size: 34rpx;
  line-height: 86rpx;
}

.btn-cancel {
  width: 50%;
  color: #333333;
  text-align: center; 
}
.btn-confirm {
  width: 50%;
  color: #64acfe;
  text-align: center;
  border-right: 1px solid #dedede;
}